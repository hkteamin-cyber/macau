{
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "**", "destination": "/馬交.html" }
    ],
    "headers": [
      {"source": "**/*.@(js|css|svg)", "headers": [{"key": "Cache-Control", "value": "public, max-age=31536000, immutable"}]},
      {"source": "/service-worker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}]},
      {"source": "/manifest.json", "headers": [{"key": "Cache-Control", "value": "no-cache"}]},
      {"source": "/馬交.html", "headers": [{"key": "Cache-Control", "value": "no-cache"}]}
    ]
  }
}